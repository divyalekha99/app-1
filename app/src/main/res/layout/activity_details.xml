<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:background="#d2c7e8"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENTER DETAILS"
        android:textColor="@android:color/black"
        android:id="@+id/head"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date1"
        android:inputType="date"
        android:layout_below="@+id/head"
        android:hint = "Date"
        android:textSize="25dp"
        android:elevation="3dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payto"
        android:layout_below="@+id/date1"
        android:hint = "Pay to"
        android:textSize="25dp"
        android:elevation="3dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/words"
        android:layout_below="@+id/payto"
        android:hint = "Amount in words"
        android:textSize="25dp"
        android:elevation="3dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nums"
        android:layout_below="@+id/words"
        android:hint = "Amount in number"
        android:textSize="25dp"
        android:elevation="3dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/accno"
        android:layout_below="@+id/nums"
        android:hint = "Account Number"
        android:textSize="25dp"
        android:elevation="3dp"
        android:maxLength="16"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cheqno"
        android:layout_below="@+id/accno"
        android:hint = "Cheque Number"
        android:textSize="25dp"
        android:elevation="3dp"
        android:maxLength="6"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/micr"
        android:layout_below="@+id/cheqno"
        android:hint = "MICR Number"
        android:textSize="25dp"
        android:maxLength="9"
        android:elevation="3dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/brno"
        android:layout_below="@+id/micr"
        android:hint = "Branch Number"
        android:textSize="25dp"
        android:maxLength="6"
        android:elevation="3dp"/>

    <EditText
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brno"
        android:hint = "Local Number"
        android:textSize="25dp"
        android:elevation="3dp"
        android:maxLength="2"/>

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text = "OK"
        android:textSize="30dp"
        android:elevation="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:background="#30302f"
        android:textColor="@android:color/background_light"/>



</RelativeLayout>